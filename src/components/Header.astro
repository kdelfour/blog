---
import { SITE_ICON, SITE_TITLE } from "../consts";
import { Icon } from "astro-icon/components";
---

<header>
  <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
    <div
      class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
    >
      <a href={import.meta.env.BASE_URL} class="flex items-center">
        <Icon name={SITE_ICON} class="text-2xl mr-3 text-orange-500" />
        <span
          class="self-center text-xl font-semibold whitespace-nowrap dark:text-white"
          >{SITE_TITLE}</span
        >
      </a>
      <div class="flex items-center lg:order-2">
        <a
          href={import.meta.env.BASE_URL}
          class="text-gray-800 dark:text-white hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-2 lg:px-5 py-1 lg:py-2.5 mr-1 lg:mr-2 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800"
          ><Icon name="mdi:home" /></a
        >
        <a
          href={import.meta.env.BASE_URL + "articles"}
          class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-2 lg:px-5 py-1 lg:py-2.5 mr-1 lg:mr-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800"
          >Articles</a
        >
        <a
          href={import.meta.env.BASE_URL + "books"}
          class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-2 lg:px-5 py-1 lg:py-2.5 mr-1 lg:mr-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800"
          >Livres</a
        >
        <a
          href={import.meta.env.BASE_URL + "about"}
          class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-2 lg:px-5 py-1 lg:py-2.5 mr-1 lg:mr-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800"
          >A propos
        </a>
        <a
          href={import.meta.env.BASE_URL + "search"}
          class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-2 lg:px-5 py-1 lg:py-2.5 mr-1 lg:mr-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800"
          ><Icon name="mdi:search" /></a
        >
      </div>
    </div>
  </nav>
</header>
