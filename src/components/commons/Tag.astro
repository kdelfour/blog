---
interface TagProps {
  tag: string;
  counter: number;
  href: string;
}

const { tag, counter, href } = Astro.props as TagProps;
---

<a
  href={href}
  class="inline-flex items-center text-orange-500 text-xs font-medium me-2 px-3 py-1 rounded border border-orange-500"
>
  {tag}
  {
    counter && (
      <span class="inline-flex items-center justify-center w-4 h-4 ms-2 text-xs font-semibold text-gray-900 bg-orange-300 rounded-full">
        {counter}
      </span>
    )
  }
</a>
