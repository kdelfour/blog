---
import Header from "./Header.astro";
import Thumbnail from "./Thumbnail.astro";

const { slug, cover, title, description, pubDate } = Astro.props;
---

<div class="flex flex-col items-center mb-5">
  <a href={`${import.meta.env.BASE_URL}articles/${slug}/`}>
    <Thumbnail cover={cover} />
    <Header title={title} description={description} pubDate={pubDate} />
  </a>
</div>
