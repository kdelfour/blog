---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import SubTitle from "../commons/SubTitle.astro";
interface ListArticlesProps {
  slice?: number;
}

const { slice } = Astro.props as ListArticlesProps;

const allPosts = (await getCollection("articles")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const posts = slice ? allPosts.slice(0, slice) : allPosts;
---

<section>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={import.meta.env.BASE_URL + `articles/${post.slug}/`}>
            <img
              width={720}
              height={360}
              src={import.meta.env.BASE_URL + post.data.heroImage}
              alt=""
            />
            <div>
              <SubTitle title={post.data.title} />
              {/* <h4>{post.data.title}</h4> */}
              <span class="text-gray-300 text-sm">{post.data.description}</span>
              <p class="text-gray-300 text-sm">
                Publi√© le <FormattedDate date={post.data.pubDate} />
              </p>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  ul li {
    width: calc(50% - 1rem);
  }
  ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  ul li:first-child {
    width: 100%;
    margin-bottom: 1rem;
    text-align: center;
  }
  ul li:first-child img {
    width: 100%;
  }
  ul li:first-child h4 {
    font-size: 2.369rem;
    margin: 0;
  }
  ul li:first-child p {
    text-align: center;
  }
  ul li img {
    margin-bottom: 0.5rem;
    border-radius: 12px;
  }
  ul li a {
    display: block;
  }
  ul li a:hover h4,
  ul li a:hover .date {
    color: rgb(var(--accent));
  }
  ul a:hover img {
    box-shadow: var(--box-shadow);
  }
  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      width: 100%;
      text-align: center;
    }
    ul li:first-child {
      margin-bottom: 0;
    }
    ul li:first-child .title {
      font-size: 1.563em;
    }
  }
</style>
